# MosAIc Stack Environment Variables
# Copy this file to .env and update the values for your deployment

# Database Passwords
POSTGRES_PASSWORD=your_secure_postgres_password_here
REDIS_PASSWORD=your_secure_redis_password_here

# Gitea Configuration
GITEA_DISABLE_REGISTRATION=true
GITEA_REQUIRE_SIGNIN=true

# Woodpecker CI/CD Configuration
WOODPECKER_GITEA_CLIENT=your_gitea_oauth_client_id
WOODPECKER_GITEA_SECRET=your_gitea_oauth_client_secret
WOODPECKER_AGENT_SECRET=your_woodpecker_agent_secret
WOODPECKER_ADMIN=admin

# Plane.so Configuration
PLANE_SECRET_KEY=your_plane_secret_key_here

# Domain Configuration (Update if using different domain)
MOSAICSTACK_DOMAIN=mosaicstack.dev

# Optional: Override default ports (for development only)
# GITEA_WEB_PORT=3000
# GITEA_SSH_PORT=2222
# WOODPECKER_PORT=8000
# BOOKSTACK_PORT=8080
# PLANE_PORT=3001