# Gitea Standalone Environment Configuration
# This configuration is compatible with the full MosAIc stack

# Domain Configuration
GITEA_DOMAIN=git.mosaicstack.dev

# Database Configuration
POSTGRES_PASSWORD=ChangeThisSecurePassword123!

# Redis Configuration
REDIS_PASSWORD=ChangeThisRedisPassword123!

# Security Keys (Generate unique values!)
# Generate with: openssl rand -hex 32
GITEA_SECRET_KEY=
GITEA_INTERNAL_TOKEN=

# Initial Setup
GITEA_INSTALL_LOCK=false  # Set to true after initial setup
GITEA_DISABLE_REGISTRATION=false  # Set to true after creating users
GITEA_REQUIRE_SIGNIN=false  # Set to true for private instance

# Admin Configuration (for auto-setup)
GITEA_ADMIN_USERNAME=admin
GITEA_ADMIN_EMAIL=admin@mosaicstack.dev