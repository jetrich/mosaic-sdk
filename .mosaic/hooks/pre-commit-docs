#!/bin/bash
# Pre-commit hook to validate documentation structure
# Copy this to .git/hooks/pre-commit or include in your existing pre-commit

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo "üîç Checking documentation structure..."

# Get list of staged markdown files
STAGED_DOCS=$(git diff --cached --name-only --diff-filter=ACM | grep -E "^docs/.*\.md$")

if [ -z "$STAGED_DOCS" ]; then
    echo "‚úÖ No documentation changes to validate"
    exit 0
fi

# Check if validation script exists
if [ ! -f "scripts/validate-bookstack-structure.py" ]; then
    echo -e "${YELLOW}‚ö†Ô∏è  Warning: Validation script not found${NC}"
    echo "Cannot validate documentation structure"
    exit 0
fi

# Run validation on staged files
VALIDATION_ERRORS=0
for file in $STAGED_DOCS; do
    # Skip files in bookstack directory
    if [[ "$file" == *"bookstack"* ]]; then
        continue
    fi
    
    # Check if file follows 4-level hierarchy
    IFS='/' read -ra PARTS <<< "$file"
    if [ ${#PARTS[@]} -ne 5 ]; then  # docs/shelf/book/chapter/page.md
        echo -e "${RED}‚ùå $file - Not in 4-level hierarchy (shelf/book/chapter/page)${NC}"
        VALIDATION_ERRORS=$((VALIDATION_ERRORS + 1))
    fi
    
    # Check if filename starts with number
    filename=$(basename "$file")
    if ! [[ "$filename" =~ ^[0-9]{2}- ]]; then
        echo -e "${RED}‚ùå $file - Filename must start with 01-, 02-, etc.${NC}"
        VALIDATION_ERRORS=$((VALIDATION_ERRORS + 1))
    fi
    
    # Check frontmatter if file exists
    if [ -f "$file" ]; then
        # Check for required frontmatter fields
        if ! grep -q "^title:" "$file"; then
            echo -e "${RED}‚ùå $file - Missing required frontmatter field: title${NC}"
            VALIDATION_ERRORS=$((VALIDATION_ERRORS + 1))
        fi
        
        if ! grep -q "^order:" "$file"; then
            echo -e "${RED}‚ùå $file - Missing required frontmatter field: order${NC}"
            VALIDATION_ERRORS=$((VALIDATION_ERRORS + 1))
        fi
        
        if ! grep -q "^category:" "$file"; then
            echo -e "${RED}‚ùå $file - Missing required frontmatter field: category${NC}"
            VALIDATION_ERRORS=$((VALIDATION_ERRORS + 1))
        fi
    fi
done

# Run full validation
echo "Running full structure validation..."
if python3 scripts/validate-bookstack-structure.py docs/ > /tmp/doc-validation.log 2>&1; then
    echo -e "${GREEN}‚úÖ Documentation structure validation passed${NC}"
else
    echo -e "${RED}‚ùå Documentation structure validation failed${NC}"
    echo "Details:"
    grep -E "(ERROR|WARNING)" /tmp/doc-validation.log | head -10
    VALIDATION_ERRORS=$((VALIDATION_ERRORS + 1))
fi

if [ $VALIDATION_ERRORS -gt 0 ]; then
    echo ""
    echo -e "${RED}‚ùå Documentation validation failed with $VALIDATION_ERRORS errors${NC}"
    echo ""
    echo "üìö To fix:"
    echo "1. Check the structure rules: cat .mosaic/DOCUMENTATION-RULES.md"
    echo "2. Find valid paths: python3 scripts/list-valid-doc-paths.py"
    echo "3. Fix issues and try again"
    echo ""
    echo "To bypass (NOT RECOMMENDED): git commit --no-verify"
    exit 1
fi

echo -e "${GREEN}‚úÖ Documentation structure validated successfully${NC}"
exit 0