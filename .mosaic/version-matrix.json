  "rules": {
    "tony-core": {
      "description": "Tony Framework maintains independent versioning",
      "constraint": "MCP version must be compatible"
    },
    "mosaic-components": {
      "description": "MosAIc components follow synchronized milestones",
      "constraint": "All @mosaic/* packages must have compatible versions"
    },
    "mcp-requirement": {
      "description": "MCP is mandatory starting from Tony 2.8.0",
      "constraint": "No standalone mode available"
    }
  },
  "deprecations": {
    "2025-01-18": {
      "packages": [
        "@tony-framework/mcp",
        "@tony-ai/sdk"
      ],
      "reason": "Rebranded to @mosaic/* namespace"
    },
    "2025-01-18": {
      "features": [
        "standalone-mode",
        "file-based-state"
      ],
      "reason": "MCP is now mandatory"
    }
  }
}