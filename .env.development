# MosAIc SDK Local Development Environment
# This configuration is isolated to the mosaic-sdk directory

# MCP Server Configuration
MCP_MODE=local
MCP_PORT=3456
MCP_HOST=localhost
MCP_DATABASE_PATH=./.mosaic/data/mcp.db

# Tony Framework Configuration
TONY_MCP_REQUIRED=true
TONY_MCP_URL=http://localhost:3456

# Development Settings
NODE_ENV=development
LOG_LEVEL=debug
LOG_DIR=./.mosaic/logs

# Isolation Settings
MOSAIC_SDK_ISOLATED=true
MOSAIC_CONFIG_DIR=./.mosaic
MOSAIC_CACHE_DIR=./.mosaic/cache
MOSAIC_DATA_DIR=./.mosaic/data